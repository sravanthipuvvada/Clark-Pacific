{
  "$schema": "https://developer.microsoft.com/json-schemas/spfx-build/config.2.0.schema.json",
  "version": "2.0",
  "bundles": {
    "social-media-web-part": {
      "components": [
        {
          "entrypoint": "./lib/webparts/socialMedia/SocialMediaWebPart.js",
          "manifest": "./src/webparts/socialMedia/SocialMediaWebPart.manifest.json"
        }
      ]
    },
    "tech-advocates-web-part": {
      "components": [
        {
          "entrypoint": "./lib/webparts/techAdvocates/TechAdvocatesWebPart.js",
          "manifest": "./src/webparts/techAdvocates/TechAdvocatesWebPart.manifest.json"
        }
      ]
    },
    "employee-spotlight-web-part": {
      "components": [
        {
          "entrypoint": "./lib/webparts/employeeSpotlight/EmployeeSpotlightWebPart.js",
          "manifest": "./src/webparts/employeeSpotlight/EmployeeSpotlightWebPart.manifest.json"
        }
      ]
    }
  },
  "externals": {
    "jquery": {
      "path": "node_modules/jquery/dist/jquery.min.js",
      "globalName": "jQuery"
    },
    "twitter": {
      "path": "src/javascripts/twitter/widgets.js",
      "globalName": "twttr"
    },
    "socialstream": {
      "path": "src/javascripts/socialStream/socialstream.jquery.js",
      "globalName": "jQuery",
      "globalDependencies": [
        "jquery"
      ]
    }
  },
  "localizedResources": {
    "SocialMediaWebPartStrings": "lib/webparts/socialMedia/loc/{locale}.js",
    "TechAdvocatesWebPartStrings": "lib/webparts/techAdvocates/loc/{locale}.js",
    "EmployeeSpotlightWebPartStrings": "lib/webparts/employeeSpotlight/loc/{locale}.js",
    "PropertyControlStrings": "node_modules/@pnp/spfx-property-controls/lib/loc/{locale}.js"
  }
}